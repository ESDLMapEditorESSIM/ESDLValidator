{
    "name": "Test validation schema 1",
    "description": "Test validation schema which is used in esdl-validator unit tests",
    "validations": [
        {
            "name": "check_area_scope_notnull",
            "description": "Check if all Areas have a scope",
            "type": "warning",
            "message": "Area does not have a scope",
            "selects": [
                {
                    "function": "get",
                    "alias": "areas",
                    "args": {
                        "type": "Area"
                    }
                }
            ],
            "check": {
                "function": "not_null",
                "dataset": "areas",
                "args": {
                    "property": "scope",
                    "counts_as_null": [
                        "null"
                    ]
                }
            }
        }
    ]
}