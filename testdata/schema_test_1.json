{
    "name": "Schema test 1",
    "description": "A schema for testing purpose",
    "rules": [
        {
            "name": "check_asset_id_notnull",
            "desciption": "Check if all assets have an id",
            "type": "error",
            "message": "Asset does not have an id",
            "selects": [
                {
                    "function": "get",
                    "alias": "gasheaters",
                    "args": {
                        "type": "GasHeater"
                    }
                }
            ],
            "check": {
                "function": "not_null",
                "dataset": "gasheaters",
                "args": {
                    "property": "power",
                    "counts_as_null": [
                        0,
                        0.0
                    ]
                }
            }
        }
    ]
}