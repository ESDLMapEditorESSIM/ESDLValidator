{
    "name": "vesta_nieuwbouw",
    "description": "VESTA validation example for new building ESDL files",
    "validations": [
        {
            "name": "contains_not_supported_assets",
            "description": "Check if areas contain assets other than ResidualHeatSource",
            "type": "warning",
            "message": "Unsupported Asset found",
            "selects": [
                {
                    "function": "get",
                    "alias": "buildings",
                    "args": {
                        "type": "Building"
                    }
                },
                {
                    "function": "select_children",
                    "alias": "area_assets",
                    "args": {
                        "dataset": "areas",
                        "type": "Asset"
                    }
                }
            ],
            "check": {
                "function": "is_type",
                "dataset": "area_assets",
                "args": {
                    "type": "ResidualHeatSource"
                }
            }
        }
    ]
}